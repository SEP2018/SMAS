extends layout
block content
    div
        img(src='/img/login-bg.png' class='login-bg-img')
        div(class='login-form-bg')
            //NEED TO CHANGE TO FIT PAGE PERFECTLY
        div(class='login-form-container')
            img(src='/img/footer-logo.png' class='login-logo')
            h2(class='login-header') UTS' Student Medical Appointment System
            div(class='login-form')
                form(method='POST' action='')
                    input(name='username' placeholder="Login Number" class="form-item")
                    input(name='password' type='password' placeholder="Password" class="form-item")
                    button.btn.btn-primary(name='submitLogin' type='submit' class='form-submit') Login
    if authError == 'Incorrect username or password.'
        div#popup(class='popup')
            div(class='popup-container')
                div(class='popup-content')
                    img(src='/img/footer-logo.png')
                    h2 Incorrect username/password
                button#closePopup(class='popup-button') Okay

    script.
        $(document).on("click", '#closePopup', function () {
            $('#popup').attr('hidden', 'hidden');
        });