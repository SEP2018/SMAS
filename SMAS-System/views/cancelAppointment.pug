                label(for='student_id') Student ID:
            span(class='formElement')
                input#student_id.form-control(type='text' placeholder='Your Student ID...' name='student_id' required='true')
            span(class='formElement')
                button(class='smallButton') Continue


    div(class='deleteTable')
        table(id='appointments')
            tr
                th Student ID
                th Description
                th Time
                th Cancel

