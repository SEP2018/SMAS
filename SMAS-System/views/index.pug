extends layout

block content
	header(class='header')
		div(class='top-header-bg')
			a(href='/')
				img(src='/img/logo.png' class='logo')
			div(class='header-user')
				div(class='username')
					p Chloe Dizon
				img(src='/img/logoutbtn.png' class='logout-btn')
		div(class='nav-menu-bg')
			div(class='nav-menu-container')
				ul.nav-menu
					li
						a(href='doctors.pug') Doctor
					li
						a(href='services.pug') Services
					li
						a(href='bookings.pug') Bookings
					li
						a(href='/') Home

	div(class='banner-area')
		img(src='/img/homeBG2.jpg' class='banner')
		div(class='banner-heading-position')
			h1(class='banner-heading') UTS' Student Medical Appointment System

	div(class='body')

		table
			td
				a(href='/appointments/create')
					button(class='largeButton') Make Appointment
			td
				a(href='/appointments/cancel')
					button(class='largeButton') Cancel Appointment

	footer(class='footer')
		div(class='footer-bg')
			div(class='footer-content')
				img(src='/img/footer-logo.png' class='footer-logo')
				div(class='footer-contact')
					p(class='footer-text') For any questions or enquiries, please contact 0412 345 678 | utsmedical@uts.edu.au
				div(class='footer-links')
					div(class='nav-menu-container')
						ul.nav-menu
							li
								a(href='doctors.pug') Doctor
							li
								a(href='services.pug') Services
							li
								a(href='bookings.pug') Bookings
							li
								a(href='/') Home
